{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Stryker configuration",
  "mutate": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.test.{ts,tsx}",
    "!src/main.tsx",
    "!src/vite-env.d.ts",
    "!src/components/**/*.{ts,tsx}",
    "!src/App.tsx",
    "!src/utils/canvasUtils.ts",
    "!src/utils/exportUtils.ts",
    "!src/hooks/useCanvasItem.ts",
    "!src/hooks/useItemInteraction.ts",
    "!src/utils/mosaicUtils.ts"
  ],
  "testRunner": "vitest",
  "reporters": [
    "progress",
    "clear-text",
    "html",
    "json"
  ],
  "coverageAnalysis": "perTest",
  "ignoreStatic": true
}